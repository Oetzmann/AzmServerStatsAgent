<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="StatsDb" connectionString="Server=.;Database=SPExpert_AZMTool;Integrated Security=True;" />
  </connectionStrings>
  <appSettings>
    <!-- Servername, wie in AZMtool serverList / DB erwartet. Leer = Environment.MachineName -->
    <add key="ServerName" value="" />
    <!-- Intervall in Sekunden (z. B. 30) -->
    <add key="IntervalSeconds" value="30" />
    <!-- Ordner für 30-Sekunden-Rohdaten (NDJSON). Leer = ProgramData\AzmServerStats -->
    <add key="SamplesDirectory" value="" />
    <!-- Roster-Status API Basis-URL (inkl. query-prefix bis zum Secret), leer = deaktiviert -->
    <add key="RosterStatusUri" value="" />
    <!-- Roster-Status Secret (wird URL-encoded an RosterStatusUri angehängt), leer = deaktiviert -->
    <add key="RosterStatusSecret" value="" />
  </appSettings>
</configuration>
